<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p %d{yyyy-MM-dd HH:mm:ss,SSS}] [THREAD:%t] %c(%L):%m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN" />
        </filter>
    </appender>

    <appender name="DEBUG_FILE_LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <param name="file" value="D:\wd\logs\commondatacontracttimer\debug.log"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%-5p %d{yyyy-MM-dd HH:mm:ss,SSS}] [THREAD:%t] %c(%L):%m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="INFO"/>
        </filter>
    </appender>

    <appender name="ERROR_FILE_LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <param name="file" value="D:\wd\logs\commondatacontracttimer\error.log"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%-5p %d{yyyy-MM-dd HH:mm:ss,SSS}] [THREAD:%t] %c(%L):%m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="WARN"/>
        </filter>
    </appender>

    <logger name="java.sql" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.apache.ibatis" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="java.sql.Statement" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="java.sql.PreparedStatement" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="java.sql.ResultSet" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="java.sql.Connection" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="java.lang.SecurityException">
        <level value="INFO"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <category name="com.wanda.common.contract" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="ERROR_FILE_LOG"/>
        <appender-ref ref="DEBUG_FILE_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </category>

    <!--OFF-->
    <category name="org.apache" additivity="false">
        <priority value="OFF"/>
    </category>

    <category name="httpclient.wire" additivity="false">
        <priority value="OFF"/>
    </category>

    <root>
        <priority value="INFO"/>
        <appender-ref ref="ERROR_FILE_LOG"/>
        <appender-ref ref="DEBUG_FILE_LOG"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</log4j:configuration>