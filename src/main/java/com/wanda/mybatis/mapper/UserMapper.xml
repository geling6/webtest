<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanda.mybatis.dao.UserMapper">
  <select id="selectById" parameterType="int" resultType="user">
    select * from user where id = #{id}
  </select>
  
  <select id="getIdByName" resultType="Integer">
    select id from user where user_name = #{userName}
  </select>
  
  <select id="selectMapById" parameterType="int" resultType="hashmap">
    select * from user where id = #{id}
  </select>
  
  <select id="selectMapByStatus" parameterType="int" resultType="hashmap">
    select id,account,user_name from user where status = #{status}
  </select>
</mapper>